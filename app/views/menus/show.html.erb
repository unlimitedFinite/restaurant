<h1>
  <%= @menu.title %>
  <%= link_to 'Delete menu', @menu, {method: 'delete', remote: true, data: {confirm: "Are you sure?"}} %>
  <%= link_to "Edit Menu", edit_menu_path %>
</h1>
<h3><%= @menu.price %></h3>
<h4><%= @menu.description %></h4>

<hr>

<ul class="dishes-list">
  <% @menu.sections.each do |section| %>
    <li>
      <%= section.title.upcase %>
      <%= link_to "Edit Section", edit_menu_section_path(@menu, section), remote:true %>
      <ul>
        <% section.dishes.each do |dish| %>
          <li>
            <%= dish.title %>
            <%= dish.description %>
            <%= dish.price %>
            <%= link_to 'Remove dish', remove_dish_path(@menu, section, dish), {method: 'delete', remote: true, data: {confirm: "Are you sure?"}} %>
            <%= link_to 'Edit dish', edit_menu_section_dish_path(@menu, section, dish), remote: true %>
          </li>
        <% end %>
      </ul>
    <hr>
    </li>
  <% end %>
    <div id="dish-form" style="display:none;"></div>
</ul>



<hr>


<%= link_to "New Section", new_menu_section_path(@menu), remote:true %>
<div id="section-form" style="display:none;"></div>
<div id="section-edit-form" style="display:none;"></div>

<div id="dish-form" style="display:none;"></div>
