<hr class="mt-3">
<h5 class="section-title text-center mt-3">
  <%= section.title.upcase %>
  <%= link_to edit_name_path(@menu, section), remote: true do %>
    <i class="fa fa-edit"></i>
  <% end %>
  <%= link_to menu_section_path(@menu, section), {method: 'delete', remote: true, data: {confirm: "Are you sure you want to delete '#{section.title}'?"}} do %>
    <i class="fa fa-trash"></i>
  <% end %>
  <%= link_to edit_menu_section_path(@menu, section), remote:true do %>
    <i class="fa fa-plus"></i>
  <% end %>
</h5>
<p class="menu-info">
  <%= section.description %>
</p>
<div class="mt-3">
  <%= render section.dishes, section: section %>
</div>
