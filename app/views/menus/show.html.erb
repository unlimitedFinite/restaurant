<h1><%= @menu.title %></h1>
<h3><%= @menu.price %></h3>
<h5><%= @menu.description %></h5>
<ul>
  <% @sections.each do |section| %>
    <li>
      <%= section.title %>
      <% section.dishes.each do |dish| %>
        <li>
          <%= dish.title %>
          <%= dish.description %>
        </li>
      <% end %>
    </li>
  <% end %>
</ul>
