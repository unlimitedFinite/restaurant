<section>
  <div class="container text-center">
    <h2 class="display-4 mb-3">Edit <%= @section.title %></h2>
    <p class="menu-info"></p>
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-8">
        <%= simple_form_for [@menu, @section], :url => update_name_path, :method => :patch, remote:true do |f| %>
          <%= f.input :title %>
          <%= f.input :description, as: :text %>
          <%= link_to 'Cancel', menu_path(@menu), class: 'btn btn-outline-danger' %>
          <%= f.submit 'Update', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</section>
