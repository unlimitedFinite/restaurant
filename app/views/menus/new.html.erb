<h1>New Menu</h1>

<%= form_with scope: :menu, url: menus_path, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.label :price %><br>
    <%= form.number_field :price, step: 0.01
 %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
