<h1>
  <%= @menu.title %>
  <%= link_to 'Delete menu', @menu, {method: 'delete', remote: true, data: {confirm: "Are you sure?"}} %>
</h1>
<h3><%= @menu.price %></h3>
<h5><%= @menu.description %></h5>
<ul>
  <% @menu.dishes.each do |dish| %>
    <li>
      <%= dish.title %>
      <%= dish.description %>
      <%= dish.price %>
<!--       <%#= link_to 'Delete item', dish, {method: 'delete', remote: true, data: {confirm: "Are you sure?"}} %> -->
    </li>
  <% end %>
</ul>
<%= link_to "Add Dish", new_menu_dish_path(@menu), remote:true %>
<%= link_to "Edit Menu", edit_menu_path %>

<div id="dish-form" style="display:none;"></div>
