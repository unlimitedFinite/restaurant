<section class="site-section" id="section-menu">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center mb-4 site-animate">
        <h2 class="display-4">Our Food Menus</h2>
      </div>
      <div class="col-md-12 text-center">
        <ul class="nav site-tab-nav nav-pills mb-4" id="pills-tab" role="tablist">
          <% @menus.each_with_index do |menu, index| %>
            <li class="nav-item site-animate">
              <a class="nav-link active" id="pills-<%= index %>-tab" data-toggle="pill" href="#pills-<%= index %>" role="tab" aria-controls="pills-<%= index %>" aria-selected="true"><%= menu.title %></a>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="tab-content text-left">
      <% @menus.each_with_index do |menu, index| %>
        <div class="tab-pane fade show active" id="pills-<%= index %>" role="tabpanel" aria-labelledby="pills-<%= index %>-tab">
          <div class="row">
            <div class="col-md-12 text-center mb-0.5 site-animate">
              <div class="row justify-content-center">
                <div class="col-md-6">
                  <p class="text-center">
                    <%= menu.description %>
                    <br>
                    Â£<%= menu.price %>
                  </p>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <% menu.sections.each do |section| %>
              <div class="col-md-6 site-animate">
                <h5 class="h3" style="text-align: center;"><%= section.title %></h5>
                <br>
                <% section.dishes.each do |dish| %>
                  <div class="media menu-item">
                      <div class="media-body">
                        <h5 class="mt-0 menu-header"><%= dish.title %></h5>
                        <h6 class="text-primary menu-price"><%= dish.price %></h6>
                        <p style="clear: both;"><%= dish.description %></p>
                      </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
